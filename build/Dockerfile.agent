# Stage 1: Builder
# UPDATED: Using Go 1.25
FROM golang:1.25 AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o agent cmd/mock_agent.go

# Stage 2: Runtime
FROM gcr.io/distroless/static-debian12
COPY --from=builder /app/agent /

CMD ["/agent"]
